  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+tendzd",
      "url": "/handle?url=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.tendzd.bahrain",
      "id": "com.tendzd.bahrain"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/tendzd-bahrain/id123456789",
      "id": "123456789"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "scope_extensions": [
    {
      "origin": "https://cdn.tendzd.com"
    },
    {
      "origin": "https://api.tendzd.com"
    }
  ],
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp", ".avif"],
        "application/pdf": [".pdf"],
        "text/csv": [".csv"]
      }
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"]
